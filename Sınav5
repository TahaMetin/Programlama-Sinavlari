#include <stdio.h>
#include <stdlib.h>

// 0 ve 1 kullanarak kullanıcının girdiği boyutta satranç tahtası desene çıkaran kodu yazınız.

int main()
{
    int satir,sutun,i,j,k=0;
    printf("satir sayisini gir:");
    scanf("%d",&satir);
    printf("sutun sayisini gir:");
    scanf("%d",&sutun);

    for(i=0;satir>i;i++)
    {
        for(j=0;sutun>j;j++)
        {
            if(k%2==0)
                printf("1");

            else
                printf("0");

            k++;
        }
        if(i%2==0)
            k=1;
        else
            k=0;

        printf("\n");
    }

    return 0;
}
